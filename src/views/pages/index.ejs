<%- include("../includes/head") %>
  <link rel="stylesheet" href="/css/pages/home.css">
  <link rel="stylesheet" href="/css/includes/footer.css">
  <link rel="stylesheet" href="/css/components/button.css">
  </head>
	<body>
    <main class="main">
      <h1 class="heading">Онлайн <span class="gradient-text">словник</span></h1>

      <% if (isAuthorized) { %>
        <%- include('../components/link.ejs', {
            href: logOutPath,
            content: "Log Out"
          })
        %>
      <% } else { %>
        <%- include('../components/link.ejs', {
            href: signInPath,
            content: "Sign In"
          })
        %>
        <%- include('../components/link.ejs', {
            href: signUpPath,
            content: "Sign Up"
          })
        %>
      <% } %>

      <section class="cta-start">
        <div class="cta-start__content">
          <h2 class="cta-start__heading">Розпочни вже зараз</h2>
          <%- include('../components/button.ejs', {
            type: "submit",
            label: "Знайти слово",
            className: "cta-start__button",
            href: dictionaryRoute
          }); %>
        </div>
      </section>
    </main>
	</body>

  <%- include('../includes/footer.ejs') %>

  <script src="/js/home.js"></script>
  <script>
    Library.configure();
  </script>
<%- include("../includes/end") %>
