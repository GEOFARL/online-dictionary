{
	"include": ["src"],
	"exclude": [".eslintrc.js", "src/client"],
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"lib": ["es2015"]
}
