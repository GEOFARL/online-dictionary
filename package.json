{
	"name": "online-auction",
	"version": "1.0.0",
	"scripts": {
		"_prettier": "prettier \"**/*.{js,ts,tsx,json,md,css,html}\"",
		"git:hook:precommit": "lint-staged --cwd .",
		"git:hook:commit": "npx @commitlint/cli --edit",
		"lint": "concurrently \"npm:lint:*\"",
		"lint:js": "npx eslint . --max-warnings=0",
		"lint:type": "npx tsc --noEmit",
		"lint:format": "npm run _prettier -- --check",
		"lint:trash": "knip",
		"lint:fs": "ls-lint",
		"start:dev": "tsx watch src/app.ts",
		"start:dev:client": "npx webpack --watch --config ./src/client/webpack.config.mjs",
		"start": "node build/app.js",
		"ci:prepare": "simple-git-hooks",
		"build:client": "npx webpack build --config ./src/client/webpack.config.mjs",
		"build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
		"format": "npx prettier . --write",
		"init-storage": "mkdir src/libs/modules/db/storage"
	},
	"author": "GEOFARL",
	"devDependencies": {
		"@commitlint/cli": "^19.0.3",
		"@commitlint/config-conventional": "^19.0.3",
		"@ls-lint/ls-lint": "^2.2.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.24",
		"@types/passport": "^1.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"concurrently": "^8.2.2",
		"danger": "^11.3.1",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-perfectionist": "^2.5.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-sonarjs": "^0.24.0",
		"eslint-plugin-unicorn": "^51.0.1",
		"knip": "^5.0.3",
		"lint-staged": "^15.2.2",
		"prettier": "3.2.5",
		"simple-git-hooks": "^2.10.0",
		"ts-loader": "^9.5.1",
		"tsc-alias": "^1.8.8",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"convict": "^6.2.4",
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.9",
		"express": "^4.18.3",
		"jsonwebtoken": "^9.0.2",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"pino": "^8.19.0",
		"pino-pretty": "^10.3.1"
	},
	"simple-git-hooks": {
		"pre-commit": "npm run lint:type && npm run git:hook:precommit",
		"commit-msg": "npm run git:hook:commit"
	}
}
